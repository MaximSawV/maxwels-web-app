{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block head %}
    <title>Maxwels Requests</title>
    <link rel="stylesheet" href="/stylesheets/requestpage-style.css"/>
{% endblock %}

{% block body %}
    <div class="mainpage">
        <div class="menu">
            <div class="dropdown">
                <a>
                    {{ username }}
                </a>
                <ul>
                    <li class="status-menu">
                        <a>
                            Status
                        </a>
                        <ul>
                            <li>
                                <a>
                                    Online
                                </a>
                            </li>
                            <li>
                                <a>
                                    Busy
                                </a>
                            </li>
                            <li>
                                <a>
                                    Offline
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a>
                            Options
                        </a>
                    </li>
                    <li>
                        <a>
                            Conntacts
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('main_page') }}">
                            <-Back
                        </a>
                    </li>
                    <li>
                        <a>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
            <div>
                <a href="/request/all_requests/1">
                    Show My
                </a>
            </div>
            <div>
                <a href="/request/done_requests/1">
                    Show Done
                </a>
            </div>
            {% if is_granted('ROLE_MANAGE_OWN_REQUESTS') or is_granted('ROLE_ADMIN')%}
            <div>
                <a href="/request/createRequest">
                    Create Request
                </a>
            </div>
            {% endif %}
            {% if is_granted('ROLE_TAKE_REQUEST') or is_granted('ROLE_ADMIN') %}
            <div>
                <a href="/request/all_open_requests/1">
                    Show all
                </a>
            </div>
            {% endif %}
        </div>
        <div class="content">
            {% block content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
